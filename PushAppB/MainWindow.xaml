<Window x:Class="PushAppB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PushAppB"
        mc:Ignorable="d"
        Title="App B" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock
            x:Name="InfoText"
            Text="AppId: AppB"
            FontWeight="Bold"
            TextAlignment="Center"
            Margin="0, 0, 0, 24"/>
        <Button
            x:Name="ButtonRegister"
            Content="Register for push notifications"
            Click="ButtonRegister_Click"
            HorizontalAlignment="Center"
            Padding="12"/>
        <TextBlock
            Text="https://pushsingletondemo.azurewebsites.net/"
            HorizontalAlignment="Center"
            Margin="0, 12, 0, 0"/>
    </StackPanel>
</Window>
